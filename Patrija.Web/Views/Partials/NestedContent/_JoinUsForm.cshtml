@using Patrija.Core.ViewModels.Partials.JoinUs;
@using Patrija.Core.ViewModels.Shared
@using Patrija.Web.Extensions

@inherits Umbraco.Web.Mvc.UmbracoViewPage<JoinUsFormViewModel>

<div class="popup-overlay @(Model.IsVolunteer? "volunteer" : "member" )-popup">
    <div class="popup">
        <button class="popup__close-btn js-close-popup" type="button">
            <span class="sr-only">Zatvori</span>
        </button>
        <div class="popup-form__container">
            <div class="popup-form__column">
                @if (!string.IsNullOrWhiteSpace(Model.Title))
                {
                    <h3 class="h3 popup-form__title">@Model.Title</h3>
                }
                <form action="" method="post" class="form">
                    <div class="form__row">
                        <label class="form__label" for="@(Model.IsVolunteer? "v":"m")-name">@Model.NameFieldText</label>
                        <input class="form__input" type="text" id="@(Model.IsVolunteer? "v":"m")-name" name="@(Model.IsVolunteer? "v":"m")-name">
                        <span class="form__error-message">Ovo polje je obavezno.</span>
                    </div>
                    <div class="form__row">
                        <label class="form__label" for="@(Model.IsVolunteer? "v":"m")-email">@Model.EmailFieldText</label>
                        <input class="form__input" type="email" id="@(Model.IsVolunteer? "v":"m")-email" name="@(Model.IsVolunteer? "v":"m")-email">
                        <span class="form__error-message">Ovo polje je obavezno.</span>
                    </div>
                    <div class="form__row">
                        <label class="form__label" for="@(Model.IsVolunteer? "v":"m")-message">@Model.CommentFieldText</label>
                        <textarea class="form__input form__input--textarea" id="@(Model.IsVolunteer? "v":"m")-message" name="@(Model.IsVolunteer? "v":"m")-message"></textarea>
                        <span class="form__error-message">Ovo polje je obavezno.</span>
                    </div>
                    <div class="form__row">
                        <button class="btn @Model.SubmitButtonClass btn--submit" type="submit">@Model.SubmitButtonText</button>
                    </div>
                    <span class="form__message-success">@Model.SuccessMessage</span>
                </form>
            </div>
            <div class="popup__image-outer">
                <div class="popup__image">
                    <div class="popup__image-img has-cover" style="@if (Model.Image != null) {<text>background-image: url('@Model.Image.Url');</text>}"></div>
                    <span class="circle circle--blue"></span>
                    <span class="circle circle--mint circle--small"></span>
                </div>
            </div>
        </div>
    </div>
</div>
