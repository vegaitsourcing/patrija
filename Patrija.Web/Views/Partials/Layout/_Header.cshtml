@using Patrija.Core.ViewModels.Shared
@inherits UmbracoViewPage<Patrija.Core.ViewModels.Partials.Layout.HeaderViewModel>

@{
    var menu = new LinkViewModel[]
    {
        new LinkViewModel("/", "Home"), 
        new LinkViewModel("/", "About us"), 
    };
}

<header class="header">
    <div class="wrap">
        <div class="header__container">
            <a href="@Model.LogoUrl" class="header__logo">
                <img src="@Model.Logo.Url" alt="@Model.Logo.AlternateText">
            </a>
            <div class="navigation">
                @if (menu?.Length > 0)
                {
                    <nav class="nav">
                        <ul class="nav__list" role="menubar">

                            @for (var i = 0; i < menu.Length; i++)
                            {
                                <li class="nav__item" role="menuitem">
		                            @Html.Partial("Link", menu[i], new ViewDataDictionary(new { className = $"nav__link {(i == 0 ? "nav__link--active" : string.Empty)}" }))
                                </li>
                            }
                        </ul>
                    </nav>
                }
		        @Html.Partial("Link", Model.JoinUsLink, new ViewDataDictionary(new { className = "btn btn--mint header__join-btn" }))
                <button class="nav-toggle" type="button">
                    <span class="nav-toggle__line nav-toggle__line--top"></span>
                    <span class="nav-toggle__line nav-toggle__line--middle"></span>
                    <span class="nav-toggle__line nav-toggle__line--bottom"></span>
                    @*<span class="sr-only">{{navToggle}}</span>*@
                </button>
            </div>
        </div>
    </div>
</header>
