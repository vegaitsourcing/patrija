@using Patrija.Core.ViewModels.Shared;
@inherits Umbraco.Web.Mvc.UmbracoViewPage<FormWithoutDescriptionViewModel>

@{
    var formId = ViewData["formId"] as string ?? string.Empty;
}

<div class="member-form__column" id="@formId">
    <h3 class="h3 member-form__title">@Model.Title</h3>
    <form action="" method="post" class="form">
        <div class="form__row">
            <label class="form__label" for="name">@Model.NameFieldText</label>
            <input class="form__input" type="text" id="name" name="name">
            <span class="form__error-message" data-for="name">@Model.NameFieldError</span>
        </div>
        <div class="form__row">
            <label class="form__label" for="email">@Model.EmailFieldText</label>
            <input class="form__input" type="email" id="email" name="email">
            <span class="form__error-message" data-for="email">@Model.EmailFieldError</span>
        </div>
        <div class="form__row">
            <label class="form__label" for="message">@Model.CommentFieldText</label>
            <textarea class="form__input form__input--textarea" id="message" name="message"></textarea>
            <span class="form__error-message" data-for="message">@Model.CommentFieldError</span>
        </div>
        <div class="form__row">
            <button class="btn @Model.SubmitButtonClass btn--submit" type="submit">@Model.SubmitButtonText</button>
        </div>
        <span class="form__message-success">@Model.SuccessMessage</span>
    </form>
</div>