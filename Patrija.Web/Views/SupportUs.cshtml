@inherits Umbraco.Web.Mvc.UmbracoViewPage<SupportUsViewModel>

@if (Model.TestimonialsContainer != null)
{
    Html.RenderAction<NestedContentController>(c => nameof(c.TestimonialsContainer), new { viewModel = Model.TestimonialsContainer });
}

@if (Model.DonationForm != null)
{
    Html.RenderAction<NestedContentController>(c => nameof(c.SimpleForm), new { viewModel = Model.DonationForm, formId = "donations-form" });
}

@if (Model.FaqContainer != null)
{
    Html.RenderAction<NestedContentController>(c => nameof(c.FaqContainer), new { viewModel = Model.FaqContainer });
}