@inherits Umbraco.Web.Mvc.UmbracoViewPage<SupportUsViewModel>

@if (Model.PageIntro != null)
{
    Html.RenderAction<NestedContentController>(c => nameof(c.PageIntro), new { viewModel = Model.PageIntro });
}

@if (Model.DonationForm != null)
{
    Html.RenderAction<NestedContentController>(c => nameof(c.SimpleForm), new { viewModel = Model.DonationForm, formId = Patrija.Core.Constants.Form.DonateFormId });
}

@if (Model.TestimonialsContainer != null)
{
    Html.RenderAction<NestedContentController>(c => nameof(c.TestimonialsContainer), new { viewModel = Model.TestimonialsContainer });
}

@if (Model.Donations != null)
{
    Html.RenderAction<NestedContentController>(c => nameof(c.Donations), new { viewModel = Model.Donations });
}

@if (Model.FaqContainer != null)
{
    Html.RenderAction<NestedContentController>(c => nameof(c.FaqContainer), new { viewModel = Model.FaqContainer });
}

