@inherits UmbracoViewPage<HomeViewModel>
@{
    Html.RenderAction<NestedContentController>(c => nameof(c.PageIntro), new { viewModel = Model.HomeIntro });
}

@if (Model.ArticleContainer != null)
{
    Html.RenderAction<NestedContentController>(c => nameof(c.ArticleContainer), new { viewModel = Model.ArticleContainer });
}

@foreach (var feature in Model.Features)
{
    Html.RenderAction<NestedContentController>(c => nameof(c.TaggedFeature), new { viewModel = feature });
}

@if (Model.HomeSupport != null)
{
    Html.RenderAction<ContainerController>(c => nameof(c.HomeSupportContainer), new { viewModel = Model.HomeSupport });
}

@foreach (var linkList in Model.LinksList)
{
    Html.RenderAction<NestedContentController>(c => nameof(c.LinksList), new { viewModel = linkList });
}

@if (Model.AboutUs != null)
{
    Html.RenderAction<NestedContentController>(c => nameof(c.AboutUs), new { viewModel = Model.AboutUs });
}
